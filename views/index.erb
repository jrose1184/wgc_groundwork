<% if @profile %>
<div >
<a  id="wgc" href="http://www.wegotcoders.com">WeGotCoders</a>
<a  id="twit" href="https://twitter.com/wegotcoders">WGC Twitter</a>
<a  id="fb" href="https://www.facebook.com/wegotcoders">WGC Facebook</a>
</div>
  <h3 id="header">
  	<div id="logo">
  		<img src="/images/logo.png" alt="We Got Coders"  />
  	</div>
  </h3>	

  <!-- TODO- Perhaps re-jig this to fit your new design / layout -->
  <% @profile.each do |field, value| %>
    <div class="profile-section">
      <h4><%= field %></h4>
      <li class="profile-value"><%= value %></li><br>
    </div>
  <% end %>
  

  <div id="stats" class="box">
    <h3>Stats</h3>
    <!-- TODO - Set the contents of this span with JavaScript -->
    <span id="word-count">0</span> words found.
  </div>

  <div id="problems" class="box">
    <h3>Programming Problems</h3>
    <a href="/primes">My Prime Number Solution</a>

  </div>

  
  <div id="me-wrapper" class="float-right">
    <div id="j-profile">
     <h3 style="color: #CD3333"><%= @profile["first_name"] %>'s Amazing Profile</h3>
    </div>
    <div id="me">
       <img src="/images/me.jpeg"/>
    </div>

	  <div id="edit_box">
	    <h3>Edit Profile</h3>

	    <form action="/update" method="POST">
	      <fieldset>
	        <div class="form-group">
	          <label for="trainee[about]">About</label>
	          <input id="size" type="text" name="trainee[about]" value="<%= @profile["about"] %>"/>
	        </div><br>

	        <!-- TODO - Add more fields so that your profile can be edited -->
          <div id="codeacad">
          <label for="trainee[codecademy]">codecademy</label>
          <input id="s" type="text" name="trainee[codecademy]" value="<%= @profile["codecademy"] %>"/><br><br>
          <label for="trainee[twitter]">twitter</label>
          <input id="s" type="text" name="trainee[twitter]" value="<%= @profile["twitter"] %>"/>
	        <input type="submit" value="Update Profile" class="btn btn-primary" />
          </div>
	      </fieldset>
	    </form>
	    <br><br>
	  </div>
   <div>

<% else %>
  <div class="welcome">
    <p>Welcome! Once you have updated the OAuth tokens, the link below will fetch your profile information.</p>

    <a href="/authorise">Authorise</a>
  </div>
  
<% end %>


<!-- Add your Javascript to this script tag -->
<script language="javascript">
  console.log("I am Javascript!");

  var profile_values = document.getElementsByClassName('profile-value');
  var total_words = 0;
  var word = "";

  // TODO - Count the number of words in the profile.
  // hint - look at what the innerHTML property provides.
  for(i=0;i<profile_values.length;i++){
  	word = profile_values[i].innerHTML;
  	var length = word.split(" ").length;
  	total_words = total_words + length;
  	
  }

  document.getElementById('word-count').innerHTML = total_words;
</script>